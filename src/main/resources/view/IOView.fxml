<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          fx:controller="io.simulation.controller.IOViewController"
          hgap="5" vgap="5"
          style="-fx-padding: 10;"> <!-- optional: etwas Padding -->

    <!-- LEDs -->
    <Label text="LEDs:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <HBox fx:id="ledContainer" spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1"/>



    <!-- Switches -->
    <Label text="Switches:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <HBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <children>
            <CheckBox fx:id="switch7" text="SW 7"/>
            <CheckBox fx:id="switch6" text="SW 6"/>
            <CheckBox fx:id="switch5" text="SW 5"/>
            <CheckBox fx:id="switch4" text="SW 4"/>
            <CheckBox fx:id="switch3" text="SW 3"/>
            <CheckBox fx:id="switch2" text="SW 2"/>
            <CheckBox fx:id="switch1" text="SW 1"/>
            <CheckBox fx:id="switch0" text="SW 0"/>
        </children>
    </HBox>

    <!-- Buttons -->
    <Label text="Buttons:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <HBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <children>
            <Button fx:id="button3" text="BTN 3"/>
            <Button fx:id="button2" text="BTN 2"/>
            <Button fx:id="button1" text="BTN 1"/>
            <Button fx:id="button0" text="BTN 0"/>
        </children>
    </HBox>

    <!-- Scale0 -->
    <Label text="Scale0:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Slider fx:id="slider0"
            GridPane.rowIndex="3" GridPane.columnIndex="1"
            min="0" max="1023" value="0" showTickMarks="true"
            showTickLabels="true" majorTickUnit="256"/>

    <!-- Scale1 -->
    <Label text="Scale1:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Slider fx:id="slider1"
            GridPane.rowIndex="4" GridPane.columnIndex="1"
            min="0" max="1023" value="0" showTickMarks="true"
            showTickLabels="true" majorTickUnit="256"/>
</GridPane>
